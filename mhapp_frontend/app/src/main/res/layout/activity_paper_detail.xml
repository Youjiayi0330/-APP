<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paperDetail">

    <TextView
        android:id="@+id/paper_detail_paperTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="问卷名"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <!-- 轮播图 -->
    <!-- paper_viewpager.xml -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/paper_questions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/paper_detail_paperTitle"
        android:layout_above="@+id/submit_paper"/>

    <Button
        android:id="@+id/submit_paper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="提交"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="#1C86EE"/>

</RelativeLayout>