<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:background="@drawable/note_bg"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/note_pic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="名称"
        android:textSize="15dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/note_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布人"
            android:textSize="15dp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/identity_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生"
                android:textSize="13dp"
                android:background="@drawable/doctor_tv"/>
            <TextView
                android:id="@+id/identity_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户"
                android:textSize="13dp"
                android:background="@drawable/user_tv"/>

        </FrameLayout>
    </LinearLayout>
    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/delete_note_btn"
        android:layout_gravity="right"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>