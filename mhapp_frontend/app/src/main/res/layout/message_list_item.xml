<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/message_head_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/default_head_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!--            名字和时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">
                <!--                姓名-->
                <TextView
                    android:id="@+id/message_item_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="未知"
                    android:textSize="25sp" />
                <!--                时间-->
                <TextView
                    android:id="@+id/message_item_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="昨天"
                    android:textSize="15sp" />

            </LinearLayout>


            <!--            消息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/message_item_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:text="消息"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/message_item_hasRead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="matrix"
                    android:src="@drawable/redpoint" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>